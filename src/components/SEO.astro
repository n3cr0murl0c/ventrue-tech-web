---
export interface Props {
  title?: string;
  description?: string;
  image?: string;
  url?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  section?: string;
  tags?: string[];
  noindex?: boolean;
  noduplicate?: boolean;
  nofollow?: boolean;
}

const {
  title = 'Ventrue Tech',
  description = 'Ventrue Tech - Soluciones Digitales Innovadoras. Transformamos ideas en soluciones digitales que impulsan el crecimiento de tu negocio.',
  image = '/favicon.svg',
  url = 'https://ventrue.tech',
  type = 'website',
  publishedTime,
  modifiedTime,
  author = 'Ventrue Tech',
  section,
  tags = [],
  noindex = false,
  noduplicate = false,
  nofollow = false,
} = Astro.props;

const canonicalURL = new URL(url, Astro.site || 'https://ventrue.tech');
const imageURL = new URL(image, Astro.site || 'https://ventrue.tech');

const robots = [];
if (noindex) robots.push('noindex');
if (noduplicate) robots.push('noduplicate');
if (nofollow) robots.push('nofollow');

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': type === 'article' ? 'Article' : 'Organization',
  name: 'Ventrue Tech',
  url: 'https://ventrue.tech',
  logo: 'https://ventrue.tech/favicon.svg',
  description: 'Empresa de tecnolog√≠a especializada en soluciones digitales innovadoras.',
  foundingDate: '2024',
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Quito',
    addressCountry: 'EC',
  },
  contactPoint: {
    '@type': 'ContactPoint',
    telephone: '+593-99-202-4767',
    contactType: 'customer service',
    email: 'info@ventrue.tech',
  },
  sameAs: [
    'https://github.com/n3cr0murl0c',
  ],
};
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Robots -->
<meta name="robots" content={robots.join(', ')} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageURL} />
<meta property="og:site_name" content="Ventrue Tech" />
<meta property="og:locale" content="es_ES" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageURL} />

<!-- Article specific metadata -->
{type === 'article' && publishedTime && <meta property="article:published_time" content={publishedTime} />}
{type === 'article' && modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
{type === 'article' && author && <meta property="article:author" content={author} />}
{type === 'article' && section && <meta property="article:section" content={section} />}
{tags.map((tag) => <meta property="article:tag" content={tag} />)}

<!-- JSON-LD Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

<!-- Google Consent Mode v2 - ADVANCED MODE -->
<script is:inline>
  // Initialize dataLayer BEFORE gtag
  window.dataLayer = window.dataLayer || [];
  
  // Advanced Consent Mode v2 - Required for signals to be ACTIVE
  function gtag(){dataLayer.push(arguments);}
  
  // Set consent mode to 'advanced' (not basic)
  gtag('consent', 'default', {
    'ad_storage': 'denied',
    'ad_user_data': 'denied',
    'ad_personalization': 'denied',
    'analytics_storage': 'denied',
    
    // Advanced mode settings
    'wait_for_update': 500,
    'url_passthrough': true,
    'debug_mode': true,
    
    // Region settings (empty = all regions)
    'region': ''
  });
  
  // Initialize gtag
  gtag('js', new Date());
  
  // Google Analytics 4 config
  gtag('config', 'G-0TQXN51VW3', {
    'page_path': window.location.pathname,
    'send_page_view': true,
    'cookie_flags': 'SameSite=None;Secure'
  });
</script>

<!-- Google Analytics 4 -->
<script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-0TQXN51VW3"></script>

<!-- Consent Update Functions -->
<script is:inline>
  // Global consent management object
  window.VentrueConsent = {
    granted: false,
    
    // Initialize consent from stored preferences
    init: function() {
      const stored = localStorage.getItem('ventrue_consent');
      if (stored) {
        this.granted = true;
        this.updateAll(JSON.parse(stored));
      }
    },
    
    // Update individual consent
    update: function(type, granted) {
      gtag('consent', 'update', {
        [type]: granted ? 'granted' : 'denied'
      });
    },
    
    // Update all consents at once
    updateAll: function(preferences) {
      gtag('consent', 'update', {
        'analytics_storage': preferences.analytics ? 'granted' : 'denied',
        'ad_storage': preferences.ads ? 'granted' : 'denied',
        'ad_user_data': preferences.ads ? 'granted' : 'denied',
        'ad_personalization': preferences.personalization ? 'granted' : 'denied'
      });
    },
    
    // Accept all
    acceptAll: function() {
      this.granted = true;
      localStorage.setItem('ventrue_consent', JSON.stringify({
        analytics: true,
        ads: true,
        personalization: true
      }));
      this.updateAll(this.getPreferences());
    },
    
    // Reject all
    rejectAll: function() {
      this.granted = false;
      localStorage.setItem('ventrue_consent', JSON.stringify({
        analytics: false,
        ads: false,
        personalization: false
      }));
      this.updateAll(this.getPreferences());
    },
    
    // Get current preferences
    getPreferences: function() {
      return {
        analytics: this.granted,
        ads: this.granted,
        personalization: this.granted
      };
    }
  };
  
  // Initialize on load
  document.addEventListener('DOMContentLoaded', function() {
    window.VentrueConsent.init();
  });
</script>

<!-- Data Layer for Consent Events -->
<script is:inline>
  // Push consent events to dataLayer for GTM tracking
  window.addEventListener('beforeunload', function() {
    const consent = window.VentrueConsent ? window.VentrueConsent.getPreferences() : {};
    window.dataLayer.push({
      'event': 'consent_update',
      'consent_analytics': consent.analytics ? 'granted' : 'denied',
      'consent_ads': consent.ads ? 'granted' : 'denied',
      'consent_personalization': consent.personalization ? 'granted' : 'denied'
    });
  });
</script>
